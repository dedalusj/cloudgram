{
  "name": "archdraw",
  "version": "0.0.1",
  "scripts": {
    "test": "NODE_ENV=test nyc jest",
    "test-dev": "BS_WATCHNOCLEAR=1 NODE_ENV=test nyc jest --watch",
    "lint": "node_modules/.bin/prettier --write \"{src,tests,tooling}/**/*.js\"",
    "coverage-badges": "jest-coverage-badges --output \"./badges\" && git add -A badges"
  },
  "husky": {
    "hooks": {
      "commit-msg": "echo 'Pre-commit checks...' && exit 0",
      "pre-commit": "pretty-quick --staged && && npm test && npm run coverage-badges"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "jest": "^26.4.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2"
  }
}
